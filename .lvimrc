let project_path = fnamemodify(b:localvimrc_file, ':p:h')

let current_class_path = split($CLASSPATH, ":")
let $CLASSPATH = $CLASSPATH . ':' . join(filter(['/opt/android-sdk/platforms/android-15/android.jar', project_path . '/compile-libs/androidannotations-2.7.1.jar', project_path . '/src', project_path . '/gen'], 'index(current_class_path, v:val) == -1'), ':')
let manifest_path = project_path . '/AndroidManifest.xml'

let g:syntastic_java_javac_options = '-Xlint -AandroidManifestFile=' . manifest_path
